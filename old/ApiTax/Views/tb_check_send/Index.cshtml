@model IEnumerable<ApiTax.Models.tb_check_send>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.UID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReferenceNumber)
        </th>
        <th>
            تاریخ استعلام
        </th>
        <th>
            وضعیت استعلام
        </th>
        <th>
            وضعیت ارسال صورتحساب
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReferenceNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CheckDate)
    </td>
    <td>
        @if (item.state == 0)
        {
            <span style="color:red">استعلام نشده</span>
        }
        else if (item.state == 1)
        {
            <span style="color:#51c720">استعلام شده</span>
        }
    </td>
    <td>
        @if (item.ResponseStatus == "FAILED")
        {
        <span style="color:red">FAILED</span>
        }
        else 
        {
    <span style="color:#51c720">@Html.DisplayFor(modelItem => item.ResponseStatus)</span>
        }
        
    </td>
    <td>
        @Html.ActionLink("درخواست استعلام", "CheckSend", new { id = item.SendCheckId }) |
        @Html.ActionLink("مشاهده پاسخ استعلام", "Details", new { id = item.SendCheckId }) |
        @Html.ActionLink("جزئیات", "Details", new { id = item.SendCheckId })
    </td>
</tr>
}

</table>
